# Jira OAuth 2.0 Configuration
# Get these from your Atlassian Developer Console: https://developer.atlassian.com/console/myapps/
JIRA_CLIENT_ID=your_jira_client_id_here
JIRA_CLIENT_SECRET=your_jira_client_secret_here

# OAuth Redirect URI - must match the one configured in your Jira OAuth app
# For production: https://yourdomain.com/auth/callback
# For local development: http://localhost:5000/auth/callback
JIRA_REDIRECT_URI=https://www.briefchief.ai/auth/callback

# Jira Base URL for OAuth
# Usually https://auth.atlassian.com for Atlassian Cloud
JIRA_BASE_URL=https://auth.atlassian.com

# Encryption key for securing stored tokens
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# Internal API key for bot authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# This key is used by the bot to securely retrieve user tokens from the auth server
INTERNAL_API_KEY=your_internal_api_key_here
